@using Abp.Web.Security.AntiForgery
@using Contable
@model Contable.Web.Models.Ui.LoginModel
@inject IAbpAntiForgeryManager AbpAntiForgeryManager
@{
    AbpAntiForgeryManager.SetCookie(Context);
}
<head>
    <title>Gestión de conflictos</title>
    <link href="~/view-resources/Views/Ui/Login.css" rel="stylesheet" asp-append-version="true"/>
    <script src="~/view-resources/Import/crypto-js/crypto-js.js" type="text/javascript" asp-append-version="true"></script>
    <script src="~/view-resources/Views/Ui/Login.js" type="text/javascript" asp-append-version="true"></script>
    
</head>
<div class="login-form">
    <h1>@L("LogIn")</h1>
    <input type="hidden" id="LoginToken" value="@ViewBag.Token" />
    <input type="hidden" id="LoginKey" value="@ViewBag.Key" />
    <form id="login-form" method="post">
        <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
        <input type="hidden" id="TenancyName" name="TenancyName">
        <input type="hidden" id="RequestUser" name="RequestUser">
        <input type="hidden" id="RequestPassword" name="RequestPassword">

        <div class="login-form-row">
            <label for="UsernameOrEmailAddress">@L("UserNameOrEmail")</label>
            <input type="text" id="UsernameOrEmailAddress" name="UserNameOrEmailAddress" placeholder="@L("UserNameOrEmail")">
        </div>
        <div class="login-form-row">
            <label for="password">@L("Password")</label>
            <input type="password" id="Password" name="Password" placeholder="@L("Password")">
        </div>
        <div class="login-form-row">
            <input type="checkbox" id="rememberMe" name="RememberMe" value="true">
            <label for="rememberMe">@L("RememberMe")</label>
        </div>
        <button type="submit" class="login-form-button">@L("LogIn")</button>
    </form>
    <span style="font-size: 0.8em;font-style:italic"> v@(AppVersionHelper.Version) [@AppVersionHelper.ReleaseDate.ToString("dd-MM-yyyy")]</span>
</div>